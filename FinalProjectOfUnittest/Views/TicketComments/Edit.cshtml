@model FinalProjectOfUnittest.Models.TicketComment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TicketComment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control">@Model.Comment</textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="Created" class="form-control" value=@DateTime.Now />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="UserId" class="form-control" value=@Model.UserId />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="TicketId" class="form-control" value=@Model.TicketId />
                <span asp-validation-for="TicketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-Controller="Ticket" asp-route-id=@Model.TicketId>Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

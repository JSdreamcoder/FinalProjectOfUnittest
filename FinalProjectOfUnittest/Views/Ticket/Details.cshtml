@model ViewModel
@{
    ViewData["Title"] = "Details";
    var isDeveloper = User.IsInRole("Developer");
    var isProjectManager = User.IsInRole("ProjectManager");
    var isAdmin = User.IsInRole("Administrator");
}

<h1>Details</h1>

<div>
    <div>
    <h4>Ticket</h4>
    @if(isDeveloper || isAdmin || isProjectManager)
        {
        <a asp-action="ViewHistory" asp-route-ticketid=@Model.ticket1.Id>Ticket History</a>
           
        }
    </div>
    <div>
    <a asp-action="Edit" asp-route-id="@Model.ticket1?.Id">Edit Tikcet</a> |
    <a asp-action="Index" asp-route-projectid=@Model.ticket1.Project.Id asp-route-projectname=@Model.ticket1.Project.Name>Back to List</a>
</div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Title
        </dd>
        <dt class = "col-sm-2">
           Description
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Description
        </dd>
        <dt class = "col-sm-2">
            Created Date
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Created
        </dd>
        <dt class = "col-sm-2">
            Updated
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Updated
        </dd>
        <dt class = "col-sm-2">
            Project
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Project.Name
        </dd>
        <dt class = "col-sm-2">
            TicketType
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.TicketType
        </dd>
        <dt class = "col-sm-2">
            TicketPriority
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.TicketPriority
        </dd>
        <dt class = "col-sm-2">
            TicketStatus
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.TicketStatus
        <dt class = "col-sm-2">
            Submitter
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.OwnerUser.UserName
        </dd>
        <dt class = "col-sm-2">
            Assigned Developer
        </dt>
        <dd class = "col-sm-10">
            @if(Model.ticket1.AssignedToUser != null)
            {
                @Model.ticket1.AssignedToUser.UserName    
            }
            
        </dd>

        <dt class = "col-sm-2">
            Attached Files
        </dt>
        <dd class = "col-sm-10">
                @{
                    var i = 0;
                }
            @foreach(var path in Model.stringList)
            {
                <a asp-action="Download"  class="btn btn-outline-info btn-sm" asp-route-filePath=@path>@Model.stringList2[i]</a>   
                i++;
            }
        </dd>
    </dl>
</div>


<h4>Comment</h4>
<hr />
@foreach(var comment in Model.ticket1.TicketComments)
{
  <p>
     @comment.Comment
  </p>
  <p style="font-size:1.3vw">written by @comment.User.UserName</p>
  <a asp-action="Edit" asp-controller="TicketComments" asp-route-id=@comment.Id>Edit</a>
      
  
<a asp-action="Delete" asp-controller="TicketComments" asp-route-id=@comment.Id>Delete</a>
     
  
  <hr />
}

<form asp-action="Create" asp-controller="TicketComments" asp-route-ticketid=@Model.ticket1.Id>
    <textarea cols="50" name="comment" placeholder="Comment"></textarea></br>
    <button type="submit">Submit Comment</button>
</form>



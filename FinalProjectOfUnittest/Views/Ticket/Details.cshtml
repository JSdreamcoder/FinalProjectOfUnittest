@model ViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Title
        </dd>
        <dt class = "col-sm-2">
           Description
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Description
        </dd>
        <dt class = "col-sm-2">
            Created Date
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Created
        </dd>
        <dt class = "col-sm-2">
            Updated
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Updated
        </dd>
        <dt class = "col-sm-2">
            Project
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.Project.Name
        </dd>
        <dt class = "col-sm-2">
            TicketType
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.TicketType
        </dd>
        <dt class = "col-sm-2">
            TicketPriority
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.TicketPriority
        </dd>
        <dt class = "col-sm-2">
            TicketStatus
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.TicketStatus
        <dt class = "col-sm-2">
            Submitter
        </dt>
        <dd class = "col-sm-10">
            @Model.ticket1.OwnerUser.UserName
        </dd>
        <dt class = "col-sm-2">
            Assigned Developer
        </dt>
        <dd class = "col-sm-10">
            @if(Model.ticket1.AssignedToUser != null)
            {
                @Model.ticket1.AssignedToUser.UserName    
            }
            
        </dd>

        <dt class = "col-sm-2">
            Attaced Files
        </dt>
        <dd class = "col-sm-10">
                @{
                    var i = 0;
                }
            @foreach(var path in Model.stringList)
            {
                <a asp-action="Download"  class="btn btn-info" asp-route-filePath=@path>@Model.stringList2[i]</a>   
                i++;
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ticket1?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

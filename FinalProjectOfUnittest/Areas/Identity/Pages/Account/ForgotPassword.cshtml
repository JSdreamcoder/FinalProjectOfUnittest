@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="get" asp-controller="Account" asp-action="SendEmailForRecoverPassWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input name="email" type="text" />
                <label name="email" class="form-label"></label>
                <span name="email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
